<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="col-md-8 col-md-offset-3">
  <h2 class="page-title">Create new account</h2>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-1">
  
    <%= form_for(@user) do |f| %>
      <form class="form-horizontal" role="form">      
      <div class="form-group">
        <%= f.label :first_name, "First name", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>  
      </div>

      <div class="form-group">
        <%= f.label :last_name, "Last name", class: "col-md-4 control-label" %>
        <div class="col-md-8">
            <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-9 col-md-offset-5">
        <p id="email_already_taken"></p>
      </div>

      <div class="form-group">
        <%= f.label :email, "E-pasts", class: "col-md-4 control-label" %>
        <div class="col-md-8">
            <%= f.text_field :email, id: "email_field", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "Parole", class: "col-md-4 control-label" %>
        <div class="col-md-8">
            <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm password", class: "col-md-4 control-label" %>
        <div class="col-md-8">
            <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-9 col-md-offset-3">
        <%= f.submit "Signup", class: "btn btn-link btn-lg btn-block" %> 
      </div>

    </form>
<% end %>


  </div>
</div>
<%= request.env["HTTP_HOST"] %>